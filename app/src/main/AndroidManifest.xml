<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.chengheaven.heaven">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cloudreader_mip"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.main.MainActivity" />
        <activity android:name=".view.home.HomePageActivity" />
        <activity android:name=".view.home.DownloadActivity" />
        <activity android:name=".view.home.FeedbackActivity" />
        <activity android:name=".view.home.AboutActivity" />
        <activity android:name=".view.webview.WebViewActivity" />
        <activity android:name=".view.welfareImage.WelfareImageActivity" />
        <activity android:name=".view.movieTop.MovieTopActivity" />
        <activity android:name=".view.movieDetail.MovieDetailActivity" />
        <activity android:name=".view.bookDetail.BookDetailActivity" />
        <activity android:name=".view.search.SearchActivity" />
    </application>

</manifest>